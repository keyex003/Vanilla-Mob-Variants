{
    "format_version": "1.8.0",
    "render_controllers": {
      "controller.render.bee": {
        "arrays": {
            "textures": {
              "array.skins": [
                "texture.default",
                "texture.nectar",
                "texture.angry",
                "texture.angry_nectar"
              ]
            }
        },
        "geometry": "Geometry.default",
        "materials": [ { "*": "Material.default" } ],
        "textures": [ "array.skins[query.is_powered + query.is_angry * 2]" ],
	    "overlay_color" : {
          "r": "variable.Xvar>50 ? 1.0 : -0.7",
          "g": "variable.Xvar>50 ? 1.0 : -0.7",
          "b": "variable.Xvar>50 ? 0.7 : -1.0",
          "a": "math.abs(variable.Xvar-50)*0.003"
        }
      }
    }
  }